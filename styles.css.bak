body {
  font-family: "Lucida Handwriting", "Century";
}

img {
  max-width: 100%;
  width: auto;
  height: auto;
}

input, select, button, textarea {
  max-width: 100%;
}

meter, progress, output {
  max-width: 100%;
}

div#tswsidecol {
  float: right;
  width: 20%;
  color: black;
  background-color: #ccffff;
}

div#tswcontent {
  float: right;
  width: 80%;
  color: black;
  background-color: #ccffff;
}

@media only screen and ( max-width : 629px ) {
  div#tswsidecol {
    float: none;
    width: 100%;
  }
  div#tswcontent {
    float: none;
    width: 100%;
  }
}

div#tswcontproper {
  padding-left: 5px;
  padding-right: 5px;
}

div#tswcontainer {
  background-color: #ccffff;
}

div#tswsideproper, div#tswothersideproper {
  padding-left: 5px;
  padding-right: 5px;
}

div#tswheader {
  color: black;
  background-color: #ccffff;
}

div#tswfooter {
  color: black;
  background-color: #ccffff;
}

#logo {
  float: left;
}

h1 {
  font-size: xx-large;
  font-family: "Lucida Handwriting", "Century";
}

